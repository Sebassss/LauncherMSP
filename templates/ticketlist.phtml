<body>
<div class="container-fluid">

    <table id="ttable" class="table table-hover table-dark no-wrap">
        <thead>
        <tr>
            <th width="10%" scope="col">Asignado</th>
            <th width="10%" scope="col">Creado</th>
            <th width="10%" scope="col">Oficina</th>
            <th width="20%" scope="col">Motivo</th>
            <th width="50%" scope="col">Detalle</th>
        </tr>
        </thead>
        <tbody>

        </tbody>
    </table>
</div>


<script type="text/javascript">

    function loadTickets()
    {
        console.log("load");
        $.ajax({
            url: 'getTickets',
            dataType: 'json',
            success: function(data) {
                //alert('done');

                $('#ttable tbody').empty()

                for (var i=0 ; i<data.length;i++) {

                    var xclass ="";

                    switch (data[i].prioridad)
                    {
                        case 'Muy Baja':
                        {
                            xclass = "bg-primary";
                        }break;

                        case 'Baja':
                        {
                            xclass = "bg-secondary";
                        }break;

                        case 'Normal':
                        {
                            xclass = "bg-info";
                        }break;

                        case 'Alta':
                        {
                            xclass = "bg-danger";
                        }break;

                        case 'Urgente':
                        {
                            xclass = "bg-danger";
                        }break;

                    }
                    var tmp = '<tr>' +
                        '<th class="'+ xclass +'"><a target="_blank" href="http://otrsminsalud.sanjuan.gob.ar/otrs/index.pl?Action=AgentTicketZoom;TicketID='+data[i].id+'">' + data[i].user + '</a></th>' +
                        '<th class="'+ xclass +'"><a target="_blank" href="http://otrsminsalud.sanjuan.gob.ar/otrs/index.pl?Action=AgentTicketZoom;TicketID='+data[i].id+'">' + data[i].fechahora + '</a></th>' +
                        '<th class="'+ xclass +'"><a target="_blank" href="http://otrsminsalud.sanjuan.gob.ar/otrs/index.pl?Action=AgentTicketZoom;TicketID='+data[i].id+'">' + data[i].oficina.replace('"','').replace('"','').replace(',','') + '</a></th>' +
                        '<th class="'+ xclass +'"><a target="_blank" href="http://otrsminsalud.sanjuan.gob.ar/otrs/index.pl?Action=AgentTicketZoom;TicketID='+data[i].id+'">' + data[i].motivo + '</a></th>' +
                        '<th class="'+ xclass +'"><a target="_blank" href="http://otrsminsalud.sanjuan.gob.ar/otrs/index.pl?Action=AgentTicketZoom;TicketID='+data[i].id+'">' + data[i].detalle + '</a></th></tr>';

                    $('#ttable tbody').append(tmp)
                }

            },
            error: function(e) {
                console.log(e.responseText);
            }
        });
    }
    $(document).ready(function(){

        setInterval(function(){
        loadTickets()
        },5000)
    });

